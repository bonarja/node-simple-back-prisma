generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model todo {
  id          Int      @id @default(autoincrement())
  title       String   @db.Text
  description String   @db.Text
  done        Boolean  @default(false)
  createAt    DateTime @db.Date
  user_id     Int?
  users       users?   @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_todo_users")

  @@index([user_id], map: "FK_todo_users")
}

model users {
  id       Int     @id @default(autoincrement())
  name     String  @default("0") @db.VarChar(50)
  password String  @default("0") @db.VarChar(100)
  email    String? @db.VarChar(50)
  role     String? @default("user") @db.VarChar(50)
  todo     todo[]
}
